<Window x:Class="BestellingApp.CategorieAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BestellingApp"
        mc:Ignorable="d"
        Title="CategorieAdd" Height="300" Width="500" FontStyle="Italic" FontSize="12" FontWeight="ExtraBold"
        Background="Aquamarine">
    <Border Background="BlanchedAlmond" BorderBrush="Aquamarine" BorderThickness="2" CornerRadius="20" Margin="20">
        <StackPanel  Margin="20">
            <Label Name ="lblLogin" Content="CATEGORY ADD" HorizontalAlignment="Center" FontSize="15" Foreground="PaleVioletRed" Width="130"/>
            <Separator></Separator>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Name ="lblCategorie"  Content="CATEGORIE NAAM" Foreground="PaleVioletRed" Width="125"/>
            <TextBox Name ="tbCategorienaam" Background="Beige" Foreground="Black" FontSize="18" Width="200" />
            </StackPanel>

            <Button Name="btnLogin" Content ="ADD"  Foreground="PaleVioletRed" Margin="60,10"  Click="btnAdd_Click"/>

        </StackPanel>
    </Border>
</Window>
