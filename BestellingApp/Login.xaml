<Window x:Class="BestellingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BestellingApp"
        mc:Ignorable="d"
        Title="LOGIN" Height="300" Width="300" FontStyle="Italic" FontSize="12" FontWeight="ExtraBold"
        Background="Aquamarine" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"  >
    <Border Background="BlanchedAlmond" BorderBrush="Aquamarine" BorderThickness="2" CornerRadius="20" Margin="20">
        <StackPanel  Margin="20">
            <Label Name ="lblLogin" Content="LOGIN" HorizontalAlignment="Center" FontSize="25" Foreground="PaleVioletRed" Width="100"/>
            <Separator></Separator>
            <Label Name ="lblUsernaam"  Content="USERNAAM" Foreground="PaleVioletRed" />
            <TextBox Name ="tbUsernaam" Background="Beige" Foreground="Black" FontSize="18" />

            <Label Name ="lblPass"  Content="WACHTWOORD" Foreground="PaleVioletRed"/>
            <PasswordBox x:Name="tbWachtwoord" Cursor="Arrow"></PasswordBox>  
            <Button x:Name="btnLogin" Content ="LOGIN"  Foreground="PaleVioletRed" Margin="60,10"  Click="btnLogin_Click"/>

        </StackPanel>
    </Border>
</Window>
    
       