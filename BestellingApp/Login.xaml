<Window x:Class="BestellingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BestellingApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Name ="lblUsernaam"  Content="USERNAAM" Width="100"/>
            <TextBox Name ="tbUsernaam" Width="400"/>
        </StackPanel>
       
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label  Name ="lblName" Content="WACHTWOORD" Width="100" />
            <TextBox Name ="tbPass" Width="400"/>
        </StackPanel>
        <Button Name="btnBereken" Content ="LOGIN" BorderBrush="Aquamarine" BorderThickness="2" Margin="5" Width="500" RenderTransformOrigin="-0.153,0.658" Click="btnBereken_Click"/>
       
    </StackPanel>
</Window>
    
       