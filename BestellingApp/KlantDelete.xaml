<Window x:Class="BestellingApp.KlantDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BestellingApp"
        mc:Ignorable="d"
        Title="Klant Delete" Height="300" Width="300" FontStyle="Italic" FontSize="12" FontWeight="ExtraBold"
        Background="Aquamarine">
    <Border Background="BlanchedAlmond" BorderBrush="Aquamarine" BorderThickness="2" CornerRadius="20" Margin="20">
        <StackPanel  Margin="20">
            <Label Name ="lblKlantdelete" Content="KLANT DELETE" HorizontalAlignment="Center" FontSize="15" Foreground="PaleVioletRed" Width="150"/>
            <Separator></Separator>
            <Label Name ="lblklant"  Content="KLANT LIJST" Foreground="PaleVioletRed"/>
            <ComboBox x:Name="cbklant" HorizontalContentAlignment="Center" Width="200" DisplayMemberPath="Voornaam" SelectedValuePath="KlantID"></ComboBox>

            <Button Name="btnDelete" Content ="VERWIJDEREN"  Foreground="PaleVioletRed" Margin="5"  Click="btnVerwijderen_Click" Width="150" HorizontalContentAlignment="Center"/>

        </StackPanel>
    </Border>
</Window>
